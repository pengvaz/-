/* 首页轮播图分区 */

.silder,.silder swiper, .silder image {
  width: 100%;
  height: 390rpx;
}

/* 首页导航分区 */

.index-nav {
  display: flex;
  flex-wrap: wrap;
}

.index-nav image {
  width: 80rpx;
  height: 80rpx;
}

.index-nav navigator {
  width: 33.3333%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  border-bottom: 1rpx solid #ccc;
  box-sizing: border-box;
}

/* 首页分区入口 */

.index-enter {
  display: flex;
  margin: 20rpx 25rpx;
}

.index-enter .enter-item {
  width: 50%;
  display: flex;
  justify-content: center;
}

.index-enter image {
  width: 320rpx;
  height: 178rpx;
}
