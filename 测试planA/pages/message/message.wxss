.card {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
  border: 1rpx solid #ddd;
  margin: 60rpx 20rpx;
  display: flex;
  flex-direction: column;
}

.card-img {
  width: 100%;
  height: 300rpx;
}

.card-title {
  font-size: 20px;
}

.card-date {
  font-size: 13px;
  color: #ccc;
  border-bottom: 1rpx solid #ccc;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.card-desc {
  font-size: 16px;
  color: #333;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ccc;
}

.card-red {
  font-size: 14px;
  margin-top: 20rpx;
  color: #999;
  padding: 0;
}
