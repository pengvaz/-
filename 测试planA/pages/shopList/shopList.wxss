.over{
  background: #fff
}
.shop {
  background: #fff;
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  position: relative;
}

.shop-img {
  width: 160rpx;
  height: 160rpx;
}

.shop-info {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  line-height: 1.5;
}

.shop-title {
  font-size: 16px;
  color: #333;
  width: 360rpx;
}

.shop-tel, .shop-address, .shop-time {
  font-size: 12px;
  color: #999;
}
